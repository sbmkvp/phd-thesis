  journal = {Proceedings of the National Academy of Sciences},
  number = {45},
  pages = {15888--15893},
  pmid = {25349388},
  title = {Dynamic population mapping using mobile phone data},
  url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1408439111},
  volume = {111},
  year = {2014}
}

