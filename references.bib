  keywords = {human activity recognition,pedestrian flow analysis,sensing network,smart cities,ubiquitous computing},
  pages = {1519--1526},
  title = {Statistical Analysis of Actual Number of Pedestrians for Wi-Fi Packet-based Pedestrian Flow Sensing},
